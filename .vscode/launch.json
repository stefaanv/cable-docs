{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nest Framework",
      "args": [
        "${workspaceFolder}/src/main.ts"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "outputCapture": "std", //om Winston logs op in het debug venster te kunne zien
      "internalConsoleOptions": "openOnSessionStart",
    },
    {
      "name": "Attach to Process",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 5858,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    },
  ]
}